{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../typescript-config/react-library.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "outDir": "dist"
  },
  "include": [
    "src",
    // "server/package.json",
    // "server/node_modules",
    // "server/node_modules/**/*.js",
    // "server/node_modules/**/*.js.map"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "tailwind.config.ts",
    "./package.json"
  ]
}
